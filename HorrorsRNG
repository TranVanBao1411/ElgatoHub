local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/TranVanBao1411/Library/retard/TurtleUI.lua"))()

local OwO = library:Window("Horrors RNG")

OwO:Toggle("Auto Buff Lucky", false, function(va)
    _G.Buff = va
end)

spawn(function()
    while wait() do
        if _G.Buff then
            pcall(function()
                game:GetService("ReplicatedStorage").Events.InventoryEvent:FireServer("Equip", "Super Luck Potion", "Usable")
                wait(.1)
            end)
        end
    end
end)

OwO:Button("Anti Afk", function()
    --anti afk
    local VirtualUser = game:GetService("VirtualUser")
    local character = game.Players.LocalPlayer.Character

    game.Players.LocalPlayer.Idled:Connect(function()
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end)
end)
